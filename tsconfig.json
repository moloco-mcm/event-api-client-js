{
  "compilerOptions": {
    "target": "ES2018",
    "lib": [
      "dom",
      "ES2018"
    ],
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "CommonJs",
    "moduleResolution": "node",
    "sourceMap": true,
    // Required for compatibility with modern type packages
    // Newer Jest/TypeScript require this to avoid internal type conflicts
    "skipLibCheck": true,
    "types": ["jest", "node"]
  },
  "include": [
    "src",
    "mocks"
  ]
}