{
  "compilerOptions": {
    "target": "ES5",
    "lib": [
      "dom",
      "ES6"
    ],
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "CommonJs",
    "moduleResolution": "node",
    "sourceMap": true,
  },
  "include": [
    "src",
    "mocks"
  ],
}